<mca>
	<services>
		<MonitoringTaskCacheService>
			<taskCacheFile>/home/baiyanwei/secpro/project/run/task/taskCache.list</taskCacheFile>
			<waitUploadSampleLocalPath>/home/baiyanwei/secpro/project/run/waitupload/</waitUploadSampleLocalPath>
			<taskTimerExecuteInterval>86400000</taskTimerExecuteInterval>
		</MonitoringTaskCacheService>
		<MonitoringService>
			<messageTimeout>120000</messageTimeout>
			<operationCapabilities>snmp,ssh,telnet</operationCapabilities>
