		<StorageAdapterService>
			<storageType>com.secpro.platform.monitoring.agent.storages.http.HTTPStorageAdapter</storageType>
		</StorageAdapterService>
		<HTTPStorageAdapter>
			<fetchTaskClient>
				<endPointHost>localhost</endPointHost>
				<endPointPort>8080</endPointPort>
				<endPointPath>/tss/samples/fetch</endPointPath>
			</fetchTaskClient>
			<pushSampleClient>
				<endPointHost>localhost</endPointHost>
				<endPointPort>8080</endPointPort>
				<endPointPath>/tss/samples/push</endPointPath>
			</pushSampleClient>
